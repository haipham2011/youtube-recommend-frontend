{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM", "ES2017", "ESNext.AsyncIterable"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "tests"]
}
